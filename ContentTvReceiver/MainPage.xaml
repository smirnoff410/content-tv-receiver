<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContentTvReceiver.MainPage">
    <Grid
        BackgroundColor="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Image
            x:Name="ImageContent"
            IsVisible="false"
            Grid.Row="0"
            />
        <WebView 
            x:Name="VideoContent"
            Grid.Row="0"
            HeightRequest="400"></WebView>
        <Label x:Name="UserName" Grid.Row="1" TextColor="White" Text="Username" HorizontalOptions="Center"></Label>
    </Grid>

</ContentPage>

